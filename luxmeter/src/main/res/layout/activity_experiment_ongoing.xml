<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OngoingExperimentActivity">

    <TextView
        android:id="@+id/text_lux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="luminance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/text_lux_gauge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_lux"
        app:layout_constraintStart_toEndOf="@+id/text_lux"
        tools:text="16.7838" />

    <TextView
        android:id="@+id/text_lux_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="lux"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_lux_gauge"
        app:layout_constraintStart_toEndOf="@+id/text_lux_gauge" />


    <TextView
        android:id="@+id/text_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="power"
        app:layout_constraintEnd_toEndOf="@+id/text_lux"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_lux" />

    <TextView
        android:id="@+id/text_power_gauge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_power"
        app:layout_constraintStart_toEndOf="@+id/text_power"
        tools:text="18" />

    <TextView
        android:id="@+id/text_power_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="%"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_power_gauge"
        app:layout_constraintStart_toEndOf="@+id/text_power_gauge" />


    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="progress"
        app:layout_constraintEnd_toEndOf="@+id/text_power"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_power" />

    <TextView
        android:id="@+id/text_progress_gauge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_progress"
        app:layout_constraintStart_toEndOf="@+id/text_progress"
        tools:text="10" />

    <TextView
        android:id="@+id/text_progress_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="%"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_progress_gauge"
        app:layout_constraintStart_toEndOf="@+id/text_progress_gauge" />

    <TextView
        android:id="@+id/text_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="file"
        app:layout_constraintEnd_toEndOf="@+id/text_progress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_progress" />

    <TextView
        android:id="@+id/text_file_gauge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_file"
        app:layout_constraintStart_toEndOf="@+id/text_file"
        tools:text="test_25.csv" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@+id/text_file"
        app:layout_constraintTop_toBottomOf="@+id/text_file_gauge" />

</android.support.constraint.ConstraintLayout>